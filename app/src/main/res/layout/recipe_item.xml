<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height" />

        <TextView
            android:id="@+id/tv_recipe_title"
            android:layout_below="@id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/card_margin_5"
            android:layout_marginLeft="@dimen/card_margin_5"
            android:layout_marginRight="@dimen/card_margin_5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_servings"
            android:layout_below="@id/tv_recipe_title"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/card_margin_5"
            android:layout_marginRight="@dimen/card_margin_5"
            android:layout_marginBottom="@dimen/card_margin_5"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>