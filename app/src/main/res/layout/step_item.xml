<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_step"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/card_margin_5"
                android:textStyle="bold"
                android:layout_weight=".5"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_step_des"
                android:layout_width="match_parent"
                android:layout_weight=".1"
                android:layout_marginRight="@dimen/card_margin_5"
                android:layout_marginTop="@dimen/card_margin_5"
                android:layout_marginBottom="@dimen/card_margin_5"
                android:layout_height="wrap_content" />


        </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>


